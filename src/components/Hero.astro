---
import { string } from "astro/zod";

interface Props {
  imgSrc: string;
  imgAlt: string;
  title: string;
}

const { imgSrc, imgAlt, title } = Astro.props;
---

<article class="w-full h-1/3 mb-10 relative rounded-lg">
  <img class="rounded-lg opacity-85" src={imgSrc} alt={imgAlt} />
  <a class="absolute top-1 ml-4 mt-2 text-2xl" href="">{title}</a>
</article>

<style>
  article {
    /* box-shadow: 2px 2px 13px 2px rgb(246 239 255 / 44%); */
  }
</style>
