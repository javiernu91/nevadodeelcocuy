---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="bg-slate-900 text-gray-100 flex-block max-w-4xl md:pd-8 mx-auto mt-4 text-pretty text-lg"
  >
    <slot />
  </body>
</html>
